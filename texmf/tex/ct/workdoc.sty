\renewcommand{\thefigure}{\thesection{}-\arabic{figure}}
\renewcommand{\lstlistingname}{代码}
\AtBeginDocument{
  \renewcommand{\thelstlisting}{\thesection{}-\arabic{lstlisting}}
}

