%% It's a internal package

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{workdoc}[2023/09/11 v0.3 work document package]

\RequirePackage{kvoptions}
\RequirePackage{etoolbox}

\SetupKeyvalOptions{family=workdoc,prefix=workdoc@,setkeys=\kvsetkeys}

\ProcessKeyvalOptions*\relax

\RequirePackage{utils}
\RequirePackage{float}
\floatplacement{figure}{H}

\RequirePackage{bookmark}
\bookmarksetup{
  numbered,
}

\hypersetup{
  breaklinks,
  unicode,
  linktoc=all,
  bookmarksnumbered=true,
  bookmarksopen=true,
  pdfkeywords={Wangborong's work document},
  colorlinks,
  linkcolor=black,
  citecolor=black,
  urlcolor=black,
  filecolor=black,
  plainpages=false,
  pdfstartview=FitH,
  pdfborder={0 0 0},
  linktocpage
}

% 目录名称居中
\renewcommand\contentsname{\begin{center}目\quad 录\end{center}}

% 设置表和图片的caption格式（注意要放在 infig 之后）
