% 插入表格
% 使用方法：\begin{ltblr0}[options]{table col spec} <your table> \end{ltblr0}
\NewDocumentEnvironment{ltblr0}{O{} m +b}{%
  \begin{spacing}{1.0}
    \begin{center}
      \zihao{-5}
      }{
      \begin{longtblr}[
          #1
        ]{
          row{1} = {gray8}, % gray8 is 0.75 gray from nicecolors
          stretch=1.5,
          #2,
        }
        #3
      \end{longtblr}
    \end{center}
  \end{spacing}
}

\NewDocumentEnvironment{ltblr}{O{} m +b}{%
